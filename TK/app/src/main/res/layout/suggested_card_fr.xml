<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggested_card"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            >

            <ImageView
                android:id="@+id/museum"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/notre_dame" />

            <TextView
                android:id="@+id/phrase2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="6dp"
                android:text="Notre Dame, Paris"
                android:layout_below="@id/museum"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <TextView
                android:id="@+id/translation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phrase2"
                android:text="Cathedral"
                android:textSize="14sp"
                android:textColor="#9a9a9a"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <TextView
                android:id="@+id/quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/translation2"
                android:text="QUICK PHRASES"
                android:clickable="true"
                android:textSize="14sp"
                android:textColor="#ed6337"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
